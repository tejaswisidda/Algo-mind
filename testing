<script>

  let loginForm = document.getElementById("loginForm");
  loginForm.addEventListener("submit", (e) => {
    e.preventDefault();
    let values = []

    values.push(document.getElementById("question1").value);
    values.push(document.getElementById("question2").value);
    values.push(document.getElementById("question3").value);
    values.push(document.getElementById("question4").value);
    values.push(document.getElementById("question5").value);
    values.push(document.getElementById("question6").value);
    values.push(document.getElementById("question7").value);
    values.push(document.getElementById("question8").value);
    values.push(document.getElementById("question9").value);
    values.push(document.getElementById("question10").value);
    console.log(values);
    calculateResult(values)

  });

  function calculateResult(values) {

    let yesCount = 0;
    let mostlyCount = 0;
    let noCount = 0;

    for (let i in values) {
      if (values[i] === 'Yes') {
        yesCount++;
      } else if (values[i] === 'Mostly') {
        mostlyCount++;
      } else if (values[i] === 'No') {
        noCount++;
      }
    }

    let result = 'Patient has No depression';

    if (yesCount >= 8 ) {
      result = 'Patient has High Severe depression';
    } else if (yesCount + mostlyCount >= 8 ) {
      result = 'Patient has Severe depression';
    } else if (yesCount + mostlyCount >= 5) {
      result = 'Patient has Mild depression';
    }
    alert(result)

  }
</script>
